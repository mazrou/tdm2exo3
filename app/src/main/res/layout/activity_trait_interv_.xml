<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.TraitInterv_Activity">

    <Button
        android:id="@+id/supp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nom"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="43dp"
        android:text="Supprimer" />

    <Button
        android:id="@+id/Apliquer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nom"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="39dp"
        android:text="Appliquer" />

    <EditText
        android:id="@+id/editNom"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_nom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@+id/Nom"
        android:ems="10" />

    <TextView
        android:id="@+id/spinner_nom_text"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_below="@+id/spinner_type"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="67dp"
        android:layout_toRightOf="@+id/spinner_nom" />

    <TextView
        android:id="@+id/spinner_type_text"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:layout_below="@+id/addDate"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/spinner_type" />

    <TextView
        android:id="@+id/Nom"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/spinner_nom"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="63dp"
        android:text="Nom de l'intervention :"
        android:textSize="24dp" />

    <Button
        android:id="@+id/addDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:text="Date" />

    <EditText
        android:id="@+id/InputDate"
        android:layout_width="141dp"
        android:layout_height="57dp"
        android:layout_alignBottom="@+id/addDate"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="-6dp"
        android:layout_toRightOf="@+id/addDate"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Date" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addDate"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="68dp" />

    <Spinner
        android:id="@+id/spinner_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_type"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="76dp" />
</RelativeLayout>